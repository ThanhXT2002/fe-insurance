{
  "version": 2,
  "public": true,
  "buildCommand": "npm ci --legacy-peer-deps && npm run build:vercel",
  "rewrites": [
   { "source": "/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "dist/fe-insurance/server/**/*"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0" }
      ]
    }
  ]
}
